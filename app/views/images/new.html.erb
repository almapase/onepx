<%- model_name = @image.class.model_name.human %>

<h1><%= t('.title', model: model_name)%></h1>

<%= form_for @image, builder: CustomFormBuilder do |form| %>
  <%= form.form_error %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
    <%= form.field_error :name %>

  </div>
  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <div class="field">
    <%= form.label :category %>
    <!-- SIN TRADUCIÃ“N
    <%= form.collection_select :category, Image.categories, :last, :first %> -->
    <%= form.collection_select :category, image_categories, :last, :first %>
  </div>
  <div class="field">
    <%= form.label :tags_text %>
    <%= form.text_field :tags_text %>
  </div>
  <div class="field">
    <%= form.submit %>
  </div>
<% end %>
